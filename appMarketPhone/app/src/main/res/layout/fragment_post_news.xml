<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="@dimen/paddingRight_layout_screen"
        android:paddingLeft="@dimen/paddingRight_layout_screen"
        android:paddingRight="@dimen/paddingRight_layout_screen">



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title_post_sale"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_title"
            android:layout_gravity="center"
            android:textStyle="bold"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="@dimen/paddingRight_layout_screen"
            android:layout_marginBottom="@dimen/paddingRight_layout_screen"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <ImageView
                    android:clickable="true"
                    android:id="@+id/ivImageProduct1PostSale"
                    android:layout_width="@dimen/size_avatar"
                    android:layout_height="@dimen/size_avatar"
                    android:src="@drawable/logo_camera"
                    android:layout_margin="@dimen/appbar_padding_top"
                    android:background="@drawable/selector_image_view"/>

                <ImageView
                    android:clickable="true"
                    android:id="@+id/ivImageProduct2PostSale"
                    android:layout_width="@dimen/size_avatar"
                    android:layout_height="@dimen/size_avatar"
                    android:src="@drawable/logo_camera"
                    android:layout_margin="@dimen/appbar_padding_top"
                    android:background="@drawable/selector_image_view" />

                <ImageView
                    android:clickable="true"
                    android:id="@+id/ivImageProduct3PostSale"
                    android:layout_width="@dimen/size_avatar"
                    android:layout_height="@dimen/size_avatar"
                    android:src="@drawable/logo_camera"
                    android:layout_margin="@dimen/appbar_padding_top"
                    android:background="@drawable/selector_image_view"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <Button
                    android:id="@+id/btnClearImage1"
                    android:layout_width="@dimen/size_button_clear_image"
                    android:layout_height="@dimen/size_button_clear_image"
                    android:background="@drawable/logo_delete"
                    android:layout_marginRight="65dp"/>

                <Button
                    android:id="@+id/btnClearImage2"
                    android:layout_width="@dimen/size_button_clear_image"
                    android:layout_height="@dimen/size_button_clear_image"
                    android:background="@drawable/logo_delete"
                    android:layout_marginRight="65dp"/>

                <Button
                    android:id="@+id/btnClearImage3"
                    android:layout_width="@dimen/size_button_clear_image"
                    android:layout_height="@dimen/size_button_clear_image"
                    android:background="@drawable/logo_delete" />

            </LinearLayout>

        </LinearLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="@color/white"
            app:hintTextAppearance="@style/TextAppearance.App.TextInputLayout">

            <EditText
                android:id="@+id/etTitleProductPostSale"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/hint_etTitleProductPostSale"
                android:textStyle="bold"
                android:textColor="@color/white"/>

        </android.support.design.widget.TextInputLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/paddingLeft_layout_screen"
                android:layout_centerVertical="true"
                android:textColorHint="@color/white"
                app:hintTextAppearance="@style/TextAppearance.App.TextInputLayout">

                <EditText
                    android:id="@+id/etPriceProductPostSale"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/hint_etPriceProductPostSale"
                    android:inputType="number"
                    android:maxLength="25"
                    android:textStyle="bold"
                    android:textColor="@color/white"/>

            </android.support.design.widget.TextInputLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/currency_unit"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/appbar_padding_top"
                android:layout_marginRight="@dimen/appbar_padding_top"
                android:textStyle="bold"
                android:textSize="@dimen/paddingLeft_layout_screen"
                android:textColor="@color/white"/>

        </RelativeLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="@color/white"
            app:hintTextAppearance="@style/TextAppearance.App.TextInputLayout">

            <EditText
                android:id="@+id/etDescriptionProductPostSale"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/hint_etDescriptionProductPostSale"
                android:textColor="@color/white"
                android:textStyle="bold" />

        </android.support.design.widget.TextInputLayout>

        <Button
            android:id="@+id/btnAgreePostSale"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/text_btnAgreePostSale"
            android:layout_marginTop="20dp"
            android:padding="10dp"
            android:textStyle="bold"
            android:background="@drawable/round_bg_button1"
            android:textSize="@dimen/textSize_btnLogin"
            android:textColor="@color/textColor_btnLogin"
            android:layout_marginBottom="@dimen/paddingLeft_layout_screen"/>


    </LinearLayout>

</ScrollView>